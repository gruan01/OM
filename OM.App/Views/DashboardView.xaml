                    <Run>生产商:</Run>
                    <Run Text="{Binding Data.Manufacturer}" />
                    <Run>    </Run>
                    <Run>硬件版本:</Run>
                    <Run Text="{Binding Data.Model}" />
                    <Run>    </Run>
                    <Run>软件版本:</Run>
                    <Run Text="{Binding Data.Version}" />
                    <Run>    </Run>
                    <Run>MAC:</Run>
                    <Run Text="{Binding Data.MAC}" />
                </TextBlock>
            </md:Card>


            <ItemsControl Grid.Row="1" ItemsSource="{Binding Data.Exts}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <md:Chip Margin="5" Content="{Binding ID}">
